<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/shopping"
                    android:id="@+id/gbrBukti"/>


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvIdDetail"
                    android:visibility="gone"
                    android:hint="Id detail"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/kodeSewa"
                    android:textColor="#0761A7"
                    android:textStyle="bold"
                    android:hint="kode sewa"/>

                <TextView
                    android:id="@+id/namaPenyewa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama Penyewa"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tanggal Sewa : "/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tglsewa"
                        android:textColor="#4CAF50"
                        android:hint="tanggal sewa"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tanggal Kembali : "/>

                    <TextView
                        android:id="@+id/tglKembali"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#F44336"
                        android:hint="tanggal kembali"/>

                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvTglTransaksi"
                    android:textColor="#03A9F4"
                    android:textStyle="bold"
                    android:hint="tgl transaksi"
                    />

                <LinearLayout
                    android:id="@+id/layout_late"
                    android:layout_width="wrap_content"
                    android:background="@drawable/shape_late"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/hariTerlambat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FCFBFB"
                        android:paddingLeft="5dp"
                        android:textSize="12dp"
                        android:paddingRight="5dp"
                        android:text="0 hari"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_rent"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:background="@drawable/shape_green"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/textSewa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FCFBFB"
                        android:paddingLeft="5dp"
                        android:visibility="gone"
                        android:textSize="12dp"
                        android:paddingRight="5dp"
                        android:text="Kostum di Sewa"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_kembali"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:background="@drawable/shape_yellow"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/textKembali"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FCFBFB"
                        android:paddingLeft="5dp"
                        android:textSize="12dp"
                        android:visibility="gone"
                        android:paddingRight="5dp"
                        android:text="Waktunya Mengembalikan Kostum"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/statusSewa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status sewa :"
                    android:visibility="gone"
                    android:hint="status" />


            </LinearLayout>

        </LinearLayout>




    </LinearLayout>

</android.support.v7.widget.CardView>