<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="2dp"
                    android:layout_gravity="center"
                    android:src="@drawable/shopping"
                    android:id="@+id/gbrBukti"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvIdDetail"
                    android:visibility="gone"
                    android:hint="Id detail"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvTglTransaksi"
                    android:textColor="#03A9F4"
                    android:textStyle="bold"
                    android:hint="tgl transaksi"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/namaUser"
                    android:hint="nama penyewa"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tanggal Sewa : "/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tglsewa"
                        android:textColor="#4CAF50"
                        android:hint="tanggal sewa"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tanggal Kembali : "/>

                    <TextView
                        android:id="@+id/tglKembali"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#F44336"
                        android:hint="tanggal kembali"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/statusTime"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_access_time_red_24dp"/>

                    <LinearLayout
                        android:id="@+id/layout_late"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/shape_late"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/textTerlambat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#FCFBFB"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:textSize="12dp"
                            android:text="Upload Bukti Kadaluarsa"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_upload"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:visibility="gone"
                        android:background="@drawable/shape_blue"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/textUpload"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#FCFBFB"
                            android:paddingLeft="5dp"
                            android:visibility="gone"
                            android:textSize="12dp"
                            android:paddingRight="5dp"
                            android:text="Batas Upload Bukti 2 hari"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_upload1"
                        android:layout_width="wrap_content"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:background="@drawable/shape_yellow"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/textUpload1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#FCFBFB"
                            android:paddingLeft="5dp"
                            android:visibility="gone"
                            android:paddingRight="5dp"
                            android:textSize="12dp"
                            android:text="Batas Upload Bukti 1 hari"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_uploadProses"
                        android:layout_width="wrap_content"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:background="@drawable/shape_green"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/textUploadProses"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#FCFBFB"
                            android:paddingLeft="5dp"
                            android:visibility="gone"
                            android:paddingRight="5dp"
                            android:textSize="12dp"
                            android:text="Validasi Upload Bukti Pemesanan"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_tidakValid"
                        android:layout_width="wrap_content"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:background="@drawable/shape_late"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/textTidakValid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#FCFBFB"
                            android:paddingLeft="5dp"
                            android:visibility="gone"
                            android:paddingRight="5dp"
                            android:textSize="12dp"
                            android:text="Pemesanan Tidak Valid"/>
                    </LinearLayout>




                </LinearLayout>

                <TextView
                    android:id="@+id/statusSewa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status sewa "
                    android:textColor="#F44336"
                    android:textStyle="italic"
                    android:hint="status" />



            </LinearLayout>

        </LinearLayout>




    </LinearLayout>

</android.support.v7.widget.CardView>