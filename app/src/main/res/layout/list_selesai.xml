<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="10dp"
                android:src="@drawable/shopping"
                android:id="@+id/gbrBukti"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvIdDetail"
                    android:visibility="gone"
                    android:hint="Id detail"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/kodeSewa"
                    android:textColor="#0761A7"
                    android:textStyle="bold"
                    android:hint="Kode Sewa"/>

                <TextView
                    android:id="@+id/namaPenyewa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama Penyewa"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tanggal Sewa : "/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tglsewa"
                        android:textColor="#4CAF50"
                        android:hint="tanggal sewa"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tanggal Kembali : "/>

                    <TextView
                        android:id="@+id/tglKembali"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#F44336"
                        android:hint="tanggal kembali"/>

                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvTglTransaksi"
                    android:textColor="#03A9F4"
                    android:textStyle="bold"
                    android:hint="tgl transaksi"
                    />
                <TextView
                    android:id="@+id/statusSewa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status sewa :"
                    android:visibility="gone"
                    android:hint="status" />


            </LinearLayout>

        </LinearLayout>




    </LinearLayout>
</android.support.v7.widget.CardView>